{block content}

<div class="container text-light">


	<div class="row justify-content-center DD-row-15" style="margin-bottom: 25px;">
		<div class="col-md-6">
			<h1 class="display-4 text-center text-light">Administrace</h1>
		</div>
	</div>

	<nav class="nav nav-pills nav-justified" style="margin-bottom: 15px;">
		<a class="nav-item nav-link text-light" n:href="Admin:Default">Žádosti</a>
		<a class="nav-item nav-link text-light" n:href="Admin:Users">Uživatelé</a>
		<a class="nav-item nav-link text-light" n:href="Admin:Characters">Postavy</a>
		<a class="nav-item nav-link text-light" n:href="Admin:Campaigns">Tažení</a>
		<a class="nav-item nav-link text-light" n:href="Admin:Quests">Dobrodružství</a>
		<a class="nav-item nav-link text-light active DD-nav-dark" n:href="Admin:Sittings">Sezení</a>
		<a class="nav-item nav-link text-light" n:href="Admin:Items">Předměty</a>
	</nav>

	{* content *}
	{foreach $sezeni as $row}
	<div class="card" style="margin-bottom: 10px;">
		{form changeSittingsForm}
		<div class="card-body DD-bg-dark">
			<input name="ID_sezeni" type="hidden" value="{$row['ID_sezeni']}">
				
			<div class="form-row">

				<div class="form-group col">
					<label for="inputMap" class="text-light">Místo konání</label>
					<input name="kde" type="text" id="inputMap" class="form-control" placeholder="Lokalita" maxlength="25" value="{$row['kde']}" required>
				</div>

				<div class="form-group col">
					<label for="inputMap" class="text-light">Čas konání</label>
					<input name="kdy" type="date" id="inputMap" class="form-control" placeholder="Lokalita" maxlength="25" value="{$row['kdy']}" >
				</div>

			</div>

			<div class="form-row">

				<div class="form-group col"> {* nefunguje *}
					<label for="inputCampaign" class="text-light">Dobrodružství</label>
					<select name="ID_tazeni" class="form-control" id="inputCampaign">
						<option>Dobrodružství</option>
						<option>Dobrodružství</option>
						<option>Dobrodružství</option>
					</select>
				</div>

			</div>

			<div class="form-row">

				<div class="form-group col">
					<label for="inputDate" class="text-light">Datum vytvoření</label>
					<input name="datum_vytvoreni" type="date" id="inputDate" class="form-control" value="{$row['datum_vytvoreni']}" >
				</div>

				<div class="form-group col">
					<label for="inputFlag" class="text-light">Příznak</label>
					<select name="priznak" class="form-control" id="inputFlag">
						<option value="0" {if ($row['priznak'] == '0')}selected{/if}>neukončené</option>
						<option value="1" {if ($row['priznak'] == '1')}selected{/if}>ukončené</option>
						<option value="2" {if ($row['priznak'] == '2')}selected{/if}>spuštěné</option>
					</select>
				</div>

			</div>

		</div> {* card-body *}
		<div class="card-footer text-muted DD-bg-dark" style="border-top: 1px solid white">

			<div class="row justify-content-end DD-row-0">
				<div class="btn-group" role="group" aria-label="Basic example">
					<button type="submit" class="btn btn-outline-light DD-bg-light">Uložit změny</button>
					<a n:href="Admin:SmazatSezeni $row['ID_sezeni']" class="btn btn-outline-light DD-bg-light">Smazat sezení</a>
				</div>
			</div> {* row *}

		</div> {* card-footer *}
		{/form}
	</div> {* card *}
	{/foreach}

</div>